<html>
<head>
    <script src="js/jquery-3.7.1.min.js"></script>
    <script src="js/main.js"></script>
    <link rel="stylesheet" href="css/styles.css">
    <title>{{ pageTitle }}</title>
</head>
<body>
<div class="container">
    <div class="header">
        <img src="/images/logo.svg">
    </div>
    {% if notification is not null %}
        <div class="notification {% if notificationStatus is same as 'OK' %} success {% else %} error {% endif %} ">
            {{ notification }}
        </div>
    {% endif %}
    <div class="content">
        {% block content %}
        {% endblock %}
    </div>
</div>
</body>
</html>